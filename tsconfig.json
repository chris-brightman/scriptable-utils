{
  "compilerOptions": {
    "target": "ESNext",
    "declaration": true,
    "declarationDir": "dist",
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": false,
    "strict": true,
    "rootDir": "src",
    "noImplicitAny": true,
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "lib": ["ESNext"],
    "noUncheckedIndexedAccess": true,
    "skipLibCheck": true
  },
  "include": [ "src" ],
}
